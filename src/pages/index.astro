---
import FrontLayout from "@/layouts/FrontLayout.astro";
import "../styles/global.css";
// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<FrontLayout>
  <section
    class="text-center dark:text-neutral-50 lg:h-[60vh] h-[80vh] w-full flex items-center"
  >
    <div class="mx-auto max-w-7xl px-4 py-8 lg:py-12">
      <div class="flex flex-col items-center justify-center gap-4">
        <h1 class="text-lg text-stone-700 dark:text-neutral-100">
          An open-source collection of copy-and-paste components for quickly
          building application UIs.
        </h1>
        <h2
          class="order-first xl:text-6xl text-4xl font-bold text-stone-900 dark:text-neutral-100 sm:text-6xl"
        >
          Beautiful UI Components build with Tailwind CSS and Alphine JS.
        </h2>
      </div>

      <div class="flex justify-center mt-3">
        <button
          type="button"
          class="relative flex gap-2 items-center text-lg font-bold hover:text-foreground/80 sm:text-sm p-2 border border-black shadow-[4px_4px_0_0_#000] transition-all hover:translate-x-[3px] hover:translate-y-[3px] dark:hover:shadow-none hover:shadow-none dark:border-white dark:bg-zinc-800 dark:shadow-[4px_4px_0_0_#fff] cursor-pointer"
          ><a href="/docs/introduction">Get Started </a><svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-move-right-icon lucide-move-right"
            ><path d="M18 8L22 12L18 16"></path><path d="M2 12H22"></path></svg
          ></button
        >
      </div>
    </div>
  </section>
  <section class="w-full lg:h-[60vh]">
    <div class="mx-auto max-w-7xl space-y-8 py-3 px-4 pb-8">
      <a href="/" class="inline-block"
        ><h2 class="text-2xl lg:text-3xl font-bold dark:text-neutral-50">
          âœ… Available Components
        </h2></a
      >
      <ul class="mt-4 grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4">
        <li>
          <a
            href="/docs/accordion"
            class="flex h-full flex-col border border-black dark:border-white p-4 shadow-[3px_3px_0_0_#000] dark:shadow-[3px_3px_0_0_#fff]"
            aria-label="Accordion"
            ><span aria-hidden="true" class="text-xl"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-list-chevrons-down-up-icon lucide-list-chevrons-down-up"
                ><path d="M3 5h8"></path><path d="M3 12h8"></path><path
                  d="M3 19h8"></path><path d="m15 5 3 3 3-3"></path><path
                  d="m15 19 3-3 3 3"></path></svg
              ></span
            >
            <p class="mt-4 text-sm text-stone-700 dark:text-white">
              <span>1 Component</span>
            </p>
            <h2
              class="mt-1 font-medium text-pretty text-stone-900 dark:text-white sm:text-lg"
            >
              Accordion
            </h2>
          </a>
        </li>
        <li>
          <a
            href="/docs/alert"
            class="flex h-full flex-col border border-black dark:border-white p-4 shadow-[3px_3px_0_0_#000] dark:shadow-[3px_3px_0_0_#fff]"
            aria-label="alert"
            ><span aria-hidden="true" class="text-xl"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-triangle-alert-icon lucide-triangle-alert"
                ><path
                  d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3"
                ></path><path d="M12 9v4"></path><path d="M12 17h.01"
                ></path></svg
              ></span
            >
            <p class="mt-4 text-sm text-stone-700 dark:text-white">
              <span>1 Component</span>
            </p>
            <h2
              class="mt-1 font-medium text-pretty text-stone-900 dark:text-white sm:text-lg"
            >
              Alert
            </h2>
          </a>
        </li>
        <li>
          <a
            href="/docs/colorpicker"
            class="flex h-full flex-col border border-black dark:border-white p-4 shadow-[3px_3px_0_0_#000] dark:shadow-[3px_3px_0_0_#fff]"
            aria-label="alert"
            ><span aria-hidden="true" class="text-xl"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-palette-icon lucide-palette"
                ><path
                  d="M12 22a1 1 0 0 1 0-20 10 9 0 0 1 10 9 5 5 0 0 1-5 5h-2.25a1.75 1.75 0 0 0-1.4 2.8l.3.4a1.75 1.75 0 0 1-1.4 2.8z"
                ></path><circle cx="13.5" cy="6.5" r=".5" fill="currentColor"
                ></circle><circle cx="17.5" cy="10.5" r=".5" fill="currentColor"
                ></circle><circle cx="6.5" cy="12.5" r=".5" fill="currentColor"
                ></circle><circle cx="8.5" cy="7.5" r=".5" fill="currentColor"
                ></circle></svg
              ></span
            >
            <p class="mt-4 text-sm text-stone-700 dark:text-white">
              <span>1 Component</span>
            </p>
            <h2
              class="mt-1 font-medium text-pretty text-stone-900 dark:text-white sm:text-lg"
            >
              Color Picker
            </h2>
          </a>
        </li>
        <li>
          <a
            href="/docs/datepicker"
            class="flex h-full flex-col border border-black dark:border-white p-4 shadow-[3px_3px_0_0_#000] dark:shadow-[3px_3px_0_0_#fff]"
            aria-label="datepicker"
          >
            <span aria-hidden="true" class="text-xl"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-calendar-days-icon lucide-calendar-days"
                ><path d="M8 2v4"></path><path d="M16 2v4"></path><rect
                  width="18"
                  height="18"
                  x="3"
                  y="4"
                  rx="2"></rect><path d="M3 10h18"></path><path d="M8 14h.01"
                ></path><path d="M12 14h.01"></path><path d="M16 14h.01"
                ></path><path d="M8 18h.01"></path><path d="M12 18h.01"
                ></path><path d="M16 18h.01"></path></svg
              ></span
            >
            <p class="mt-4 text-sm text-stone-700 dark:text-white">
              <span>1 Component</span>
            </p>
            <h2
              class="mt-1 font-medium text-pretty text-stone-900 dark:text-white sm:text-lg"
            >
              Date Picker
            </h2>
          </a>
        </li>
        <li>
          <a
            href="/docs/select"
            class="flex h-full flex-col border border-black dark:border-white p-4 shadow-[3px_3px_0_0_#000] dark:shadow-[3px_3px_0_0_#fff]"
            aria-label="datepicker"
          >
            <span aria-hidden="true" class="text-xl"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-text-cursor-input-icon lucide-text-cursor-input"
                ><path d="M12 20h-1a2 2 0 0 1-2-2 2 2 0 0 1-2 2H6"></path><path
                  d="M13 8h7a2 2 0 0 1 2 2v4a2 2 0 0 1-2 2h-7"></path><path
                  d="M5 16H4a2 2 0 0 1-2-2v-4a2 2 0 0 1 2-2h1"></path><path
                  d="M6 4h1a2 2 0 0 1 2 2 2 2 0 0 1 2-2h1"></path><path
                  d="M9 6v12"></path></svg
              ></span
            >
            <p class="mt-4 text-sm text-stone-700 dark:text-white">
              <span>2 Component</span>
            </p>
            <h2
              class="mt-1 font-medium text-pretty text-stone-900 dark:text-white sm:text-lg"
            >
              Select
            </h2>
          </a>
        </li>
      </ul>
    </div>
  </section>
</FrontLayout>
