---
import DocsLayout from "@/layouts/DocsLayout.astro";
import Showcase from "@/components/astro/Showcase.astro";
import AlertDemo from "@/components/ui/Alert.astro";

const alertCode = `
<div
  role="alert"
  class="p-4 border border-black bg-white rounded-xl
dark:bg-white dark:text-gray-900"
>
  <div class="flex items-start gap-4">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="1"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="lucide lucide-triangle-alert-icon lucide-triangle-alert text-gray-900 dark:text-gray-900"
      ><path
        d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3"
      ></path><path d="M12 9v4"></path><path d="M12 17h.01"></path></svg
    >
    <div class="flex-1">
      <strong class="font-medium text-gray-900 dark:text-gray-900">Alert</strong>
      <p class="mt-0.5 text-sm text-gray-900 dark:text-gray-900">
        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Nesciunt sit
        expedita cum eos illum saepe nobis aspernatur, aut ullam iure et tempore
        est, at asperiores voluptate, veniam eaque a alias.
      </p>
    </div>
  </div>
</div>
`;
---

<DocsLayout title="Alert">
  <header class="flex flex-wrap justify-between gap-4 mt-20">
    <div class="prose dark:prose-invert">
      <h1 id="accordion-component">Alert</h1>
      <p>
        A Component to attract user attention so that they focus on the
        notification.
      </p>
    </div>
  </header>

  <Showcase code={alertCode}>
    <AlertDemo />
  </Showcase>
  <section class="max-w-7xl mx-auto my-10 font-sans">
    <!-- Judul Utama -->
    <h2
      class="text-2xl font-extrabold bg-blue-400 border-4 border-black px-6 py-3 shadow-[6px_6px_0_0_#000] dark:shadow-[8px_8px_0_0_#fff] uppercase tracking-wide"
    >
      How To Use ?
    </h2>

    <!-- Container Utama -->
    <div
      class="mt-4 border-4 border-black p-6 shadow-[8px_8px_0_0_#000] dark:shadow-[8px_8px_0_0_#fff] bg-white space-y-6"
    >
      <!-- Step 1 -->
      <div
        class="border-4 border-black rounded-xl bg-indigo-200 shadow-[4px_4px_0_0_#000] p-4"
      >
        <div class="flex items-center gap-3 mb-3">
          <span
            class="bg-gray-900 text-white font-bold px-2 py-1 rounded shadow-[2px_2px_0_0_#000]"
            >1</span
          >
          <h3 class="text-lg font-bold uppercase text-gray-900">
            Install the following dependencies:
          </h3>
        </div>

        <div
          class="bg-black text-white p-4 font-mono text-sm rounded shadow-[4px_4px_0_0_#000]"
        >
          npm install tailwindcss
        </div>

      </div>

      <!-- Step 2 -->
      <div
        class="border-4 border-black rounded-xl bg-indigo-300 shadow-[4px_4px_0_0_#000] p-4"
      >
        <div class="flex items-center gap-3 mb-3">
          <span
            class="bg-gray-900 text-white font-bold px-2 py-1 rounded shadow-[2px_2px_0_0_#000]"
            >2</span
          >
          <h3 class="text-lg font-bold uppercase text-gray-900">
            Copy and paste the following code into your project.
          </h3>
        </div>
      </div>

      <!-- Step 2 -->
      <div
        class="border-4 border-black rounded-xl bg-indigo-300 shadow-[4px_4px_0_0_#000] p-4"
      >
        <div class="flex items-center gap-3 mb-3">
          <span
            class="bg-gray-900 text-white font-bold px-2 py-1 rounded shadow-[2px_2px_0_0_#000]"
            >3</span
          >
          <h3 class="text-lg font-bold uppercase text-gray-900">
            Copy and paste the command code into your project.
          </h3>
        </div>
      </div>
    </div>
  </section>
</DocsLayout>
