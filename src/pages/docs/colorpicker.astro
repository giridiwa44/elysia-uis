---
import DocsLayout from "@/layouts/DocsLayout.astro";
import Showcase from "@/components/astro/Showcase.astro";
import Colorpickers from "@/components/ui/Colorpicker.astro";

const colorpicker = `
<div x-data="{ color: '#14b8a6', copied: false }" class="flex items-center justify-center min-h-screen bg-gray-50">
  <div class="bg-white border border-gray-200 rounded-xl shadow-sm p-6 w-full max-w-md">
    <h2 class="text-base font-semibold text-gray-800 mb-2">Choose a color</h2>

    <div class="flex items-center gap-3 border border-gray-300 rounded-lg px-3 py-2">
      <input
        type="color"
        x-model="color"
        class="w-8 h-8 border-none rounded-full cursor-pointer bg-transparent"
      />
      <input
        type="text"
        x-model="color"
        class="flex-1 border-none focus:ring-0 text-gray-700 text-sm font-mono"
      />
    </div>

    <p class="text-gray-500 text-sm mt-3">
      Taking advantage of browser's default color picker.
    </p>

    <button
      @click="navigator.clipboard.writeText(color); copied = true; setTimeout(() => copied = false, 1500)"
      class="mt-4 bg-gray-900 text-white text-sm px-4 py-2 rounded-md hover:bg-gray-800 transition"
    >
      <span x-show="!copied">Copy Hex</span>
      <span x-show="copied" x-transition.opacity>âœ… Copied!</span>
    </button>
  </div>
</div>
`;
---

<DocsLayout title="Color Picker">
<header class="flex flex-wrap justify-between gap-4 mt-20">
    <div class="prose dark:prose-invert">
      <h1 id="accordion-component">Color Picker</h1>
      <p>
        A component that helps users to choose the color they like.
      </p>
    </div>
</header>
<Showcase code={colorpicker}>
    <Colorpickers />
</Showcase>
 <section class="max-w-7xl mx-auto my-10 font-sans">
    <!-- Judul Utama -->
    <h2
      class="text-2xl font-extrabold bg-blue-400 border-4 border-black px-6 py-3 shadow-[6px_6px_0_0_#000] dark:shadow-[8px_8px_0_0_#fff] uppercase tracking-wide"
    >
      How To Use ?
    </h2>

    <!-- Container Utama -->
    <div
      class="mt-4 border-4 border-black p-6 shadow-[8px_8px_0_0_#000] dark:shadow-[8px_8px_0_0_#fff] bg-white space-y-6"
    >
      <!-- Step 1 -->
      <div
        class="border-4 border-black rounded-xl bg-indigo-200 shadow-[4px_4px_0_0_#000] p-4"
      >
        <div class="flex items-center gap-3 mb-3">
          <span
            class="bg-gray-900 text-white font-bold px-2 py-1 rounded shadow-[2px_2px_0_0_#000]"
            >1</span
          >
          <h3 class="text-lg font-bold uppercase text-gray-900">
            Install the following dependencies:
          </h3>
        </div>

        <div
          class="bg-black text-white p-4 font-mono text-sm rounded shadow-[4px_4px_0_0_#000]"
        >
          npm install tailwindcss
        </div>

        <div
          class="bg-black text-white p-4 mt-3 font-mono text-sm rounded shadow-[4px_4px_0_0_#000]"
        >
          &lt;script defer src="https://cdn.jsdelivr.net/ npm/alpinejs@3.x.x/
          dist/cdn.min.js" is:inline /&gt;
        </div>
      </div>

      <!-- Step 2 -->
      <div
        class="border-4 border-black rounded-xl bg-indigo-300 shadow-[4px_4px_0_0_#000] p-4"
      >
        <div class="flex items-center gap-3 mb-3">
          <span
            class="bg-gray-900 text-white font-bold px-2 py-1 rounded shadow-[2px_2px_0_0_#000]"
            >2</span
          >
          <h3 class="text-lg font-bold uppercase text-gray-900">
            Copy and paste the Display Code Into Your Project
          </h3>
        </div>
      </div>

    </div>
  </section>
</DocsLayout>